<% include partials/header.ejs %>


    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <div class="well form-container">
            <h3>Add New Picture</h3>
            <form action="/pictures" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="pull-left">Title</label>
                    <input class="form-control" type="text" name="name" placeholder="Enter Title" maxlength="25" required>
                </div>
                <div class="form-group">
                    <label class="pull-left">Image</label>
                    <input class="form-control" type="file" accept="image/*" name="upload" required>
                </div>
                <div class="form-group">
                    <label class="pull-left">Description</label>
                    <textarea class="form-control" name="description" placeholder="Enter a description"></textarea>
                </div>
                <input class="btn btn-info btn-block" type="Submit">
            </form>
        </div>
    </div>



