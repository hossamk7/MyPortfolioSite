<div id="form-container" class="well col-md-4">
    <h3>Add New Picture</h3>
    <form class="form-group" action="/pictures" method="POST" enctype="multipart/form-data">
        <input class="form-control" type="text" name="name" placeholder="Enter Title" maxlength="25" required>
        <input class="form-control" type="file" accept="image/*" name="upload" required>
        <textarea class="form-control" name="description" placeholder="Enter a description"></textarea>
        <input class="btn btn-info btn-block" type="Submit">
    </form>
</div>

