<% include partials/header.ejs %>

<div id="form-container" class="well">
    <h3>Edit Picture</h3>
    <form action="/pictures/<%=picture.id%>/edit?_method=PUT" method="POST">
        <div class="form-group">
            <label class="pull-left">Title</label>
            <input class="form-control" type="text" name="picture[name]" value="<%= picture.name %>" maxlength="25" required>
        </div>
        <div class="form-group">
            <div class="img-responsive">
                <img class="img-thumbnail" src="<%= picture.imageLink %>">
            </div>
        </div>
        <div class="form-group">
            <label class="pull-left">Description</label>
            <textarea class="form-control" name="picture[description]" placeholder="Enter a description"><%= picture.description %></textarea>    
        </div>
        <input class="btn btn-info btn-block" type="Submit">
    </form>
</div>

<% include partials/footer.ejs %>