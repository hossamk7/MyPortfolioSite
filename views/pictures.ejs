<% include partials/header.ejs %>
    
    <div class="pic-tabs">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href='#'>Most Recent</a></li>
            <li role="presentation"><a href='#'>Most Comments</a></li>
            <li role="presentation"><a href='#'>Randoms</a></li>
            <li role="presentation"><a href='#'>Show All</a></li>
        </ul>   
    </div>
    
    <div class="jumbotron">
        <h2>Pictures</h2>
    </div>
    
    
    <div class="row">
        <% for(var i = 0; i < pictures.length; i++) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail text-center">
                <%= pictures[i].name%>
                <img src="<%=pictures[i].imageLink%>">
                <%= pictures[i].description %>
                <a class="btn btn-info btn-block" href="/pictures/<%=pictures[i]._id%>"> More Info </a>
            </div>
        </div>
        <% } %>
    </div>
