<body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/pictures/recent"> Pix <i class="fa fa-camera-retro" aria-hidden="true"></i></a>
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse" id="nav-collapse-1">
            <ul class="nav navbar-nav">
              <li><a href="/pictures/recent"> <i class="fa fa-home" aria-hidden="true"></i> Pix Home <span class="sr-only">(current)</span></a></li>
              <li><hr></li>
            </ul>
            
            <ul class="nav navbar-nav navbar-right">
              <% if(!currentUser){%>
                <li><a href="/signup"> <i class="fa fa-user-plus" aria-hidden="true"></i> Sign Up </a></li>
                <li role="presentation" class="dropdown">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"> 
                    <i class="fa fa-sign-in" aria-hidden="true"></i> Log In <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <li>
                        <form class="form-group" action="/login" method="POST">
                          <label for="username">Username</label>
                          <input id="username" name="username" class="form-control" type="text">
                          <label for="password">Password</label>
                          <input id="password" name="password" class="form-control" type="password">
                          <button class="btn btn-success center-block">Log In</button>
                        </form>
                    </li>
                  </ul>
                </li>
                <% } else { %>
                <li> 
                  <a href="/pictures/find/<%=currentUser.username%>"> 
                    Signed In: <%= currentUser.username %>
                  </a> 
                </li>
                <li><a href="/logout"> <i class="fa fa-sign-out" aria-hidden="true"></i> Log Out</a></li>
                <% } %>
            </ul>
        </div>  
      </div><!-- /.container-fluid -->
    </nav> <!-- end of nav bar -->
    
    <div class="container">
      <% if(flashRedMessage.length > 0){ %>
        <div class="alert alert-danger">
            <%= flashRedMessage %>
        </div>
      <% } %>
      <% if(flashGreenMessage.length > 0){ %>
        <div class="alert alert-success">   
          <%= flashGreenMessage %>
        </div>
      <% } %>
    </div>
    
